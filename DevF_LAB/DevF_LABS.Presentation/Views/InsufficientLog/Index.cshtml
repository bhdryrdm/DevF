
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main">
    <!-- Breadcrumb -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Insufficient Logging & Monitoring</a></li>
        <li class="breadcrumb-item active">Index</li>
        <!-- Breadcrumb Menu-->
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                @* Client Side Folder Structure *@
                <div class="col-md-2 mb-4">
                    <ul class="file-tree">
                        <li>
                            <a href="#">Insufficient Logging & Monitoring</a>
                            <ul>
                                <li>
                                    <a href="#">insufficientlog</a>
                                    <ul>
                                        <li> <a href="#insufficientlogDescription" data-toggle="tab" onclick="activeTabFile('.insufficientlogTab', '#insufficientlogDescription', '.rootTab', '#insufficientlogScenarios')">Nedir ?</a></li>
                                        <li> <a href="#insufficientlogScenariosProtectionMethod" data-toggle="tab" onclick="activeTabFile('.insufficientlogTab', '#insufficientlogScenariosProtectionMethod', '.rootTab', '#insufficientlogScenarios')">Korunma Yöntemleri</a></li>
                                    </ul>
                                </li>
                                <li><a href="#insufficientlogSource" onclick="activeTabFile('.rootTab', '#insufficientlogSource')" data-toggle="tab">Kaynaklar</a> </li>
                                <li><a href="#insufficientlogFound" onclick="activeTabFile('.rootTab', '#insufficientlogFound')" data-toggle="tab">Bulunan Insufficient Logging & Monitoring</a> </li>
                            </ul>
                        </li>
                    </ul>
                    <script>
                        function activeTabFile(destinationTab, destinationTabContent, parentTab, parentTabContent, grandParent, grandParentContent) {

                            if (parentTab != '' && !$(parentTabContent).hasClass('active')) {
                                // Aktif olan parent tab ve contenti silinir
                                $(parentTab).removeClass('active');
                                $(parentTab + 'Content').removeClass('active');
                                //Aktif olması istenen parent tab ve contenti eklenir
                                $($('li').find('a[href$="' + parentTabContent + '"]')[0]).addClass('active');
                                $(parentTabContent).addClass('active');
                            }

                            //Aktif olan tab ve content silinir
                            $(destinationTab).removeClass('active');
                            $(destinationTab + 'Content').removeClass('active');

                            //Aktif olması istenen tab ve content aktif edilir
                            $($('li').find('a[href$="' + destinationTabContent + '"]')[1]).addClass('active');
                            $(destinationTabContent).addClass('active');
                        };
                        function serverSideTab(destinationTab, destinationTabContent) {
                            $('#serverSide').css('display', 'block');

                            //Aktif olan tab ve content silinir
                            $(destinationTab).removeClass('active');
                            $(destinationTab + 'Content').removeClass('active');

                            $($('li').find('a[href$="' + destinationTabContent + '"]')[1]).addClass('active');
                            $(destinationTabContent).addClass('active');
                        };
                    </script>
                </div>
                @* Client Side Content *@
                <div class="col-md-10" id="insufficientlogPart">
                    <ul class="nav nav-tabs bg-light" role="tablist">
                        <li class="nav-item"><a class="rootTab nav-link active" data-toggle="tab" href="#insufficientlogScenarios" role="tab" aria-controls="insufficientlogPart">Insufficient Logging & Monitoring</a></li>
                        <li class="nav-item"><a class="rootTab nav-link" data-toggle="tab" href="#insufficientlogSource" role="tab" aria-controls="source">Kaynaklar</a></li>
                        <li class="nav-item"><a class="rootTab nav-link" data-toggle="tab" href="#insufficientlogFound" role="tab" aria-controls="found">Bulunan Insufficient Logging & Monitoring</a></li>
                    </ul>

                    <div class="tab-content" role="tabpanel">
                        <div class="tab-pane rootTabContent active" id="insufficientlogScenarios">
                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs bg-light" role="tablist">
                                    <li class="nav-item"><a class="insufficientlogTab nav-link active" data-toggle="tab" href="#insufficientlogDescription" role="tab">Nedir ?</a></li>
                                    <li class="nav-item"><a class="insufficientlogTab nav-link" data-toggle="tab" href="#insufficientlogScenariosProtectionMethod" role="tab">Korunma Yöntemleri</a></li>
                                </ul>
                                <div class="tab-content">
                                    @* securitymisconfig Description *@
                                    <div class="tab-pane insufficientlogTabContent active" id="insufficientlogDescription">
                                        <p class="mt-2">Bu zafiyet, yeteri kadar log kayıtlarının oluşturulmamasından ve monitoring işleminin yapılmamasından kaynaklanır.</p>
                                        <p class="mt-2">Zafiyet Türkçe olarak yetersiz günlük oluşturma ve izleme anlamına gelmektedir.</p>
                                        <p class="mt-2">Dışarıdan bakıldığı zaman bu zafiyeti tespit etmek gerçekten güçtür.</p>
                                    </div>
                                    @* Korunma Yöntemleri ? *@
                                    <div class="tab-pane insufficientlogTabContent" id="insufficientlogScenariosProtectionMethod">
                                        <b> Yapılması Gerekenler </b> <i class="fa fa-shield"></i>
                                        <ul style="font-size:12px;">
                                            <li class="mt-2"> Yapılan başarılı ya da başarısız giriş denemeleri, sunucu uyuruları ve önemli birçok işlemler loglanarak kontrol edilmeli ve gerekli görüldüğü takdirde üst yöneticilere bildirilmelidir.</li>
                                            <li class="mt-2"> Eğer işlemler loglanırsa, herhangi bir brutforce saldırı girişimi erken bir şekilde tespit edilip önlenebilir.</li>

                                        </ul>
                                        <b> Unutulmaması Gerekenler</b> <i class="fa fa-bullhorn"></i>
                                        <ul class="mt-2">
                                            <li> Saldırgan sunucudan çok fazla veri indirmeye başlarsa ve ağ trafiğinde olağandışı değişiklikler meydana gelirse bu durum verilerin çalınması ihtimalini ortaya çıkarabilir.</li> 
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @Html.Partial("~/Views/InsufficientLog/_InsufficientLogSourceWebSites.cshtml")
                        @Html.Partial("~/Views/InsufficientLog/_FoundInsufficientLog.cshtml")
                    </div>
                </div>
                @* Server Side Folder Structure *@
                <div class="col-md-2 mb-4 mt-5">
                    <ul class="file-tree">
                        <li>
                            <a href="#">Server Code</a>
                            <ul>
                                <li>
                                    <a href="#">ASP.NET MVC</a>
                                    <ul>
                                        <li>
                                            <a href="#">Controllers</a>
                                            <ul>
                                                <li><a href="#baseController" onclick="serverSideTab('.serverSideTab','#baseController')" data-toggle="tab">BaseController</a> </li>
                                                <li><a href="#securitymisconfigController" onclick="serverSideTab('.serverSideTab','#securitymisconfigController')" data-toggle="tab">SecMisconfigController</a> </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <script>
                        function serverSideTab(destinationTab, destinationTabContent) {
                            $('#serverSide').css('display', 'block');

                            //Aktif olan tab ve content silinir
                            $(destinationTab).removeClass('active');
                            $(destinationTab + 'Content').removeClass('active');

                            $($('li').find('a[href$="' + destinationTabContent + '"]')[1]).addClass('active d-block');
                            $(destinationTabContent).addClass('active');
                        };
                        function serverSideAllTabClose(destinationTabContent) {
                            $('#serverSide').css('display', 'none');

                            //Aktif olan tab ve content silinir
                            $(destinationTab).removeClass('active');
                            $(destinationTab + 'Content').removeClass('active');
                        };

                        function closeTab(destinationTabContent) {
                            $($('li').find('a[href$="' + destinationTabContent + '"]')[1]).removeClass('active d-block');
                            $($('li').find('a[href$="' + destinationTabContent + '"]')[1]).addClass('d-none');
                        }
                    </script>
                </div>
                @* Server Side Github Gist Content *@
                <div class="col-md-10 mt-5" id="serverSide" style="display:none">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="serverSideTab nav-link" data-toggle="tab" href="#baseController" role="tab">
                                    BaseController
                                    <i class="fa fa-window-close fa-lg" onclick="closeTab('#baseController')"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="serverSideTab nav-link" data-toggle="tab" href="#securitymisconfigController" role="tab">
                                    securitymisconfigController
                                    <i class="fa fa-window-close fa-lg" onclick="closeTab('#securitymisconfigController')"></i>
                                </a>
                            </li>
                            <li class="nav-item pull-right"><button type="button" class="btn btn-dark" onclick="serverSideAllTabClose('.serverSideTab')"> <i class="icon-close"></i></button></li>
                        </ul>
                        <div class="tab-content" role="tabpanel">
                            @Html.Partial("~/Views/ServerSide/ASP.NET_MVC/Controller/BaseController.cshtml")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


